@model academiadospeixinhoscloud.Models.Crianca

@{
    ViewData["Title"] = "Editar Criança";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center mb-4">Editar Criança</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome completo da criança" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NIS" class="control-label">NIS</label>
                    <input asp-for="NIS" class="form-control" placeholder="Número de Identificação Social" />
                    <span asp-validation-for="NIS" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumeroUtente" class="control-label">Número de Utente</label>
                    <input asp-for="NumeroUtente" class="form-control" placeholder="Número de utente de saúde" />
                    <span asp-validation-for="NumeroUtente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SeguroSaude" class="control-label">Seguro de Saúde</label>
                    <input asp-for="SeguroSaude" class="form-control" placeholder="Seguro de saúde" />
                    <span asp-validation-for="SeguroSaude" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apolice" class="control-label">Apólice</label>
                    <input asp-for="Apolice" class="form-control" placeholder="Número da apólice" />
                    <span asp-validation-for="Apolice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Seguradora" class="control-label">Seguradora</label>
                    <input asp-for="Seguradora" class="form-control" placeholder="Nome da seguradora" />
                    <span asp-validation-for="Seguradora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MoradaFiscal" class="control-label">Morada Fiscal</label>
                    <input asp-for="MoradaFiscal" class="form-control" placeholder="Morada fiscal" />
                    <span asp-validation-for="MoradaFiscal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nacionalidade" class="control-label">Nacionalidade</label>
                    <input asp-for="Nacionalidade" class="form-control" placeholder="Nacionalidade" />
                    <span asp-validation-for="Nacionalidade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantidadeAgregado" class="control-label">Quantidade de Agregado</label>
                    <input asp-for="QuantidadeAgregado" type="number" class="form-control" placeholder="Quantidade de pessoas no agregado familiar" />
                    <span asp-validation-for="QuantidadeAgregado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Autorizados" class="control-label">Autorizados</label>
                    <input asp-for="Autorizados" class="form-control" placeholder="Pessoas autorizadas a buscar a criança" />
                    <span asp-validation-for="Autorizados" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Doencas" class="control-label">Doenças</label>
                    <input asp-for="Doencas" class="form-control" placeholder="Doenças conhecidas" />
                    <span asp-validation-for="Doencas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NBI" class="control-label">NBI</label>
                    <input asp-for="NBI" class="form-control" placeholder="Número do Bilhete de Identidade" />
                    <span asp-validation-for="NBI" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ValidadeBI" class="control-label">Validade do BI</label>
                    <input asp-for="ValidadeBI" type="date" class="form-control" />
                    <span asp-validation-for="ValidadeBI" class="text-danger"></span>
                </div>
                <!-- Campos de seleção múltipla -->
                <div class="form-group">
                    <label asp-for="NomesAtividades" class="control-label">Atividades</label>
                    <select asp-for="NomesAtividades" asp-items="ViewBag.Atividade" class="custom-select" multiple>
                    </select>
                    <span asp-validation-for="NomesAtividades" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomesPais" class="control-label">Pais</label>
                    <select asp-for="NomesPais" asp-items="ViewBag.Pai" class="custom-select" multiple>
                    </select>
                    <span asp-validation-for="NomesPais" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomesSubscricao" class="control-label">Subscrições</label>
                    <select asp-for="NomesSubscricao" asp-items="ViewBag.Subscricao" class="custom-select" multiple>
                    </select>
                    <span asp-validation-for="NomesSubscricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomesProduto" class="control-label">Produtos</label>
                    <select asp-for="NomesProduto" asp-items="ViewBag.Produto" class="custom-select" multiple>
                    </select>
                    <span asp-validation-for="NomesProduto" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
