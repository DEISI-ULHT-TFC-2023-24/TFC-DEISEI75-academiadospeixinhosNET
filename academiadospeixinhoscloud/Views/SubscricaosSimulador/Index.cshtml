<html>
    <body >
        <h1>SubscricaosSimulador</h1>

    <form action="/SubscricaosSimulador/Select" method="post">
        <div class="form-group">
            <label for="DataNascimento">Data de Nascimento:</label>
            <input type="date" id="DataNascimento" name="DataNascimento">
        </div>
        <div class="form-group">
            <label for="DataInicio">Data de DataInicio:</label>
            <input type="date" id="DataInicio" name="DataInicio">
        </div>
        <div class="form-group">
            <h2>Subscricao:</h2>
            <select name="Subscricao" id="Subscricao" asp-items="ViewBag.Subscricao" class="custom-select mt-5 pt-3 " multiple></select>
        </div>
        <div>
            <input type="checkbox" id="taekwondo" name="taekwondo" value="true">
            <label for="taekwondo">taekwondo</label><br>
        </div>
        <div>
            <input type="checkbox" id="danca" name="danca" value="true">
            <label for="danca">Dança</label><br>
        </div>
        <div>
            <input type="checkbox" id="ingles" name="ingles" value="true">
            <label for="ingles">Inglês</label><br>
        </div>
        <div>
            <label for="nparcial">Ano letivo parcial, quantos meses:</label>
            <input type="number" id="nparcial" name="nparcial" min="0">
        </div>
        <div>
            <input type="checkbox" id="anoCompleto" name="anoCompleto" value="true">
            <label for="ingles">Ano letivo completo</label><br>
        </div>
        <br><br>
        <input type="submit" value="Submit">
    </form>

    <div>
        <h2>@ViewBag.Vaga</h2>

    </div>

    </body>
</html>