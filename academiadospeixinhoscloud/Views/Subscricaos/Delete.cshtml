@model academiadospeixinhoscloud.Models.Subscricao

@{
    ViewData["Title"] = "Eliminar Subscrição";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Eliminar Subscrição</h1>
    <div class="alert alert-warning" role="alert">
        <h3>Tem certeza de que deseja eliminar esta subscrição?</h3>
    </div>
    <div>
        <h4>Detalhes da Subscrição</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nome:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">Preço:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Preco)</dd>

            <dt class="col-sm-4">Valida:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Valida)</dd>

            <dt class="col-sm-4">Descrição:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>

            <dt class="col-sm-4">Data de Início:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataInicio)</dd>

            <dt class="col-sm-4">Data de Fim:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataFim)</dd>

            <dt class="col-sm-4">Nomes das Crianças:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NomesCriancas)</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
