@model academiadospeixinhoscloud.Models.Evento

@{
    ViewData["Title"] = "Editar";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center mb-4">Editar Evento</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Data" class="control-label">Data</label>
                    <input asp-for="Data" type="date" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Preco" class="control-label">Preço</label>
                    <input asp-for="Preco" type="number" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Professor" class="control-label">Professor</label>
                    <input asp-for="Professor" class="form-control" />
                    <span asp-validation-for="Professor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Index" class="control-label">Índice</label>
                    <input asp-for="Index" type="number" class="form-control" />
                    <span asp-validation-for="Index" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link" class="control-label">Link</label>
                    <input asp-for="Link" class="form-control" placeholder="Insira o Link do evento" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link2" class="control-label">Link2</label>
                    <input asp-for="Link2" class="form-control" placeholder="Insira o Link do evento" />
                    <span asp-validation-for="Link2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link3" class="control-label">Link3</label>
                    <input asp-for="Link3" class="form-control" placeholder="Insira o Link do evento" />
                    <span asp-validation-for="Link3" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomesSalas" class="control-label">Nome da Sala</label>
                    <input asp-for="NomesSalas" class="form-control" />
                    <span asp-validation-for="NomesSalas" class="text-danger"></span>
                </div>

                <div class="form-group text-right">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
