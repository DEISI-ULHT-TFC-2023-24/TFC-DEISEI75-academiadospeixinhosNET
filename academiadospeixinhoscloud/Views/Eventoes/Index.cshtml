@model IEnumerable<academiadospeixinhoscloud.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<section class="mt-5">
    <header class="mb-4">
        <h1 class="text-center">Lista de Eventos</h1>
    </header>

    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-success">Criar Novo Evento</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.Data)</th>
                <th>@Html.DisplayNameFor(model => model.Preco)</th>
                <th>@Html.DisplayNameFor(model => model.Professor)</th>
                <th>@Html.DisplayNameFor(model => model.Index)</th>
                <th>@Html.DisplayNameFor(model => model.NomesSalas)</th>
                <th>@Html.DisplayNameFor(model => model.Link)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                    <td>@Html.DisplayFor(modelItem => item.Professor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Index)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomesSalas)</td>
                    <th>@Html.DisplayNameFor(model => model.Link)</th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
