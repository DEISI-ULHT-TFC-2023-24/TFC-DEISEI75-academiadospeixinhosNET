@model academiadospeixinhoscloud.Models.Evento

@{
    ViewData["Title"] = "Delete";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center mb-4">Eliminar Evento</h1>
    <div class="text-center mb-4">
        <h3 class="text-danger">Tem a certeza que deseja eliminar este evento?</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@Html.DisplayFor(model => model.Nome)</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4">Descrição:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>

                        <dt class="col-sm-4">Data:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Data)</dd>

                        <dt class="col-sm-4">Preço:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Preco)</dd>

                        <dt class="col-sm-4">Professor:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Professor)</dd>

                        <dt class="col-sm-4">Índice:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Index)</dd>

                        <dt class="col-sm-4">Nome da Sala:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NomesSalas)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="text-right">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
