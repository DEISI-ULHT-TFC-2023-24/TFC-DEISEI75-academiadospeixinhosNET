<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        .form-group {
            display: inline-block;
            margin: 0 20px;
        }

        .form-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: auto;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 5px;
            text-align: center;
            min-width: 100px;
        }

        h2 {
            margin-top: 50px;
        }

        .btn-confirmar {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            color: white;
            background-color: green;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-confirmar:hover {
                background-color: darkgreen;
            }
    </style>
</head>
<body>
    <h1>Calendário de Vagas</h1>
    <div class="form-container">
        <form action="/RelatorioVagas/Select" method="post">
            <div class="form-group">
                <label for="DataInicio">Data de Início:</label>
                <input type="date" id="DataInicio" name="DataInicio">
            </div>

            <div class="form-group">
                <label for="DataFim">Data de Fim:</label>
                <input type="date" id="DataFim" name="DataFim">
            </div>

            <button class="btn-confirmar mt-3">Confirmar</button>
        </form>
    </div>

    <div id="calendario">
        <h2>Sala Roxa</h2>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <th>@monthSala.dataString</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <td>Normal: @monthSala.quantidadeNormal</td>
                        }
                    </tr>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <td>Higiene: @monthSala.quantidadeHigiene</td>
                        }
                    </tr>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <td>Creche Feliz: @monthSala.quantidadeCrecheFeliz</td>
                        }
                    </tr>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <td>Reserva: @monthSala.quantidadeReserva</td>
                        }
                    </tr>
                    <tr>
                        @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                        {
                            <td>Total: @monthSala.quantidadeTotal</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>

