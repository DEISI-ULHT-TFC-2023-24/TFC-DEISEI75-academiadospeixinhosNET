<html>
<body>
    <h1>RelatorioVagas</h1>
    <form action="/RelatorioVagas/Select" method="post">
        <div class="form-group">
            <label for="DataInicio">Data de Inico:</label>
            <input type="date" id="DataInicio" name="DataInicio">
        </div>

        <div class="form-group">
            <label for="DataFim">Data de Fim:</label>
            <input type="date" id="DataFim" name="DataFim">
        </div>

        <button class="btn btn-primary mt-3">Confirmar</button>
    </form>
    <h2>@ViewBag.Vaga</h2>
    <h2>@ViewBag.error</h2>
    <ul>
        @foreach (var month in ViewBag.months)
        {
            <li>@month</li>
        }
    </ul>
    <h1>Sala Roxa</h1>
    <table>
        <thead>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <th>@monthSala.dataString</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <td>Normal: @monthSala.quantidadeNormal</td>
                }
            </tr>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <td>Higiene: @monthSala.quantidadeHigiene</td>
                }
            </tr>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <td>Creche Feliz: @monthSala.quantidadeCrecheFeliz</td>
                }
            </tr>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <td>Reserva: @monthSala.quantidadeReserva</td>
                }
            </tr>
            <tr>
                @foreach (var monthSala in ViewBag.MonthSalasRoxa)
                {
                    <td>Total: @monthSala.quantidadeTotal</td>
                }
            </tr>
        </tbody>
    </table>

