<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Eventos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .carousel-item img {
            max-height: 300px;
            width: auto;
            margin: auto;
        }
    </style>
</head>
<body>

    @foreach (Evento evento in ViewBag.eventosBag)
    {
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center mb-3">@evento.Nome</h2>
                    @* Generate unique ID for each carousel *@
                    @{
                        var carouselId = "eventoCarousel_" + Guid.NewGuid().ToString("N");
                    }
                    <div id="@carouselId" class="carousel slide" data-interval="false">
                        <ol class="carousel-indicators">
                            @if (evento.Link != null)
                            {
                                <li data-target="#@carouselId" data-slide-to="0" class="active"></li>
                            }
                            @if (evento.Link2 != null)
                            {
                                <li data-target="#@carouselId" data-slide-to="1"></li>
                            }
                            @if (evento.Link3 != null)
                            {
                                <li data-target="#@carouselId" data-slide-to="2"></li>
                            }
                        </ol>
                        <div class="carousel-inner">
                            @if (evento.Link != null)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="@evento.Link" alt="Primeira imagem">
                                </div>
                            }
                            @if (evento.Link2 != null)
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@evento.Link2" alt="Segunda imagem">
                                </div>
                            }
                            @if (evento.Link3 != null)
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@evento.Link3" alt="Terceira imagem">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#@carouselId" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Anterior</span>
                        </a>
                        <a class="carousel-control-next" href="#@carouselId" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Próximo</span>
                        </a>
                    </div>
                    <div class="mt-4">
                        <p class="evento-text">@evento.Descricao</p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <span>@evento.Professor</span>
                        <span>@evento.Data</span>
                    </div>
                </div>
            </div>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-md-start">
                    <h6>Contacto</h6>
                    geral@academiadospeixinhos.pt
                </div>
                <div class="col-md-4 text-md-center">
                    <h6>Funcionamento</h6>
                    Segunda - Sexta<br />
                    07:30 - 19:00
                    <div>
                        <a href="politica-de-privacidade" class="text-muted">Política de Privacidade</a>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <h6>Localização</h6>
                    Av. Magalhães Coutinho Nº 11 - A
                    Urb. Colinas do Cruzeiro<br />
                    2675-654 Odivelas
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
