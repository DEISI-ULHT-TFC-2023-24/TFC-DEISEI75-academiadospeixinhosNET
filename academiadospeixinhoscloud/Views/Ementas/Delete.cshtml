@model academiadospeixinhoscloud.Models.Ementa

@{
    ViewData["Title"] = "Eliminar Ementa";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Eliminar Ementa</h1>
    <div class="alert alert-warning" role="alert">
        <h3>Tem certeza que deseja eliminar esta ementa?</h3>
    </div>

    <div>
        <h4>Detalhes da Ementa</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nome:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-2">Valida:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Valida)</dd>

            <dt class="col-sm-2">Salas:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.NomesSalas)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
