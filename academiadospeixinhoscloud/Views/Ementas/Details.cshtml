@model academiadospeixinhoscloud.Models.Ementa

@{
    ViewData["Title"] = "Detalhes da Ementa";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center">Detalhes da Ementa</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Nome:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4">Valida:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Valida)</dd>

                <dt class="col-sm-4">Salas:</dt>
                <dd class="col-sm-8">
                    @foreach (var sala in Model.NomesSalas)
                    {
                        <div>@sala</div>
                    }
                </dd>
            </dl>
            <div class="text-right">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
