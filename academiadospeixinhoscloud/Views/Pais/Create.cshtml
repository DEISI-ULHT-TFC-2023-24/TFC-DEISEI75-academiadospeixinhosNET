@model academiadospeixinhoscloud.Models.Pai

@{
    ViewData["Title"] = "Criar Pai";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Criar Pai</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NIS" class="control-label">NIS</label>
                    <input asp-for="NIS" class="form-control" />
                    <span asp-validation-for="NIS" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumeroUtente" class="control-label">Numero Utente</label>
                    <input asp-for="NumeroUtente" class="form-control" />
                    <span asp-validation-for="NumeroUtente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MoradaFiscal" class="control-label">Morada Fiscal</label>
                    <input asp-for="MoradaFiscal" class="form-control" />
                    <span asp-validation-for="MoradaFiscal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NBI" class="control-label">NBI</label>
                    <input asp-for="NBI" class="form-control" />
                    <span asp-validation-for="NBI" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ValidadeBI" class="control-label">Validade BI</label>
                    <input asp-for="ValidadeBI" type="date" class="form-control" />
                    <span asp-validation-for="ValidadeBI" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Digite o email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone1" class="control-label">Telefone 1</label>
                    <input asp-for="Telefone1" class="form-control" placeholder="Digite o primeiro número de telefone" />
                    <span asp-validation-for="Telefone1" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone2" class="control-label">Telefone2</label>
                    <input asp-for="Telefone2" class="form-control" placeholder="Digite o primeiro número de telefone" />
                    <span asp-validation-for="Telefone2" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="NomesCriancas" class="control-label">Nomes das Crianças</label>
                    <select asp-for="NomesCriancas" asp-items="ViewBag.Criancas" class="custom-select" multiple>
                    </select>
                </div>

                <div class="form-group text-right">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
