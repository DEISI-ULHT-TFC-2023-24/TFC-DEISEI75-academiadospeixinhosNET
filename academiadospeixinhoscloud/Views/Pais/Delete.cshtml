@model academiadospeixinhoscloud.Models.Pai

@{
    ViewData["Title"] = "Eliminar Pai";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Eliminar Pai</h1>
    <div class="alert alert-warning" role="alert">
        <h3>Tem certeza que deseja eliminar este registro?</h3>
    </div>
    <div>
        <h4>Detalhes do Pai</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nome:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">Data de Nascimento:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>


        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
