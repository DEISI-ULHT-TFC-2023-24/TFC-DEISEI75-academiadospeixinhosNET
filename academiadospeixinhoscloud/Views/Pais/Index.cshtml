@model IEnumerable<academiadospeixinhoscloud.Models.Pai>

@{
    ViewData["Title"] = "Lista de Pais";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="mb-4">Lista de Pais</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Criar Novo</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                <th>@Html.DisplayNameFor(model => model.NIS)</th>
                <th>@Html.DisplayNameFor(model => model.NumeroUtente)</th>
                <th>@Html.DisplayNameFor(model => model.MoradaFiscal)</th>
                <th>@Html.DisplayNameFor(model => model.NBI)</th>
                <th>@Html.DisplayNameFor(model => model.ValidadeBI)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Telefone1)</th>
                <th>@Html.DisplayNameFor(model => model.Telefone2)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@(new string('*', item.DataNascimento.ToString("yyyy-MM-dd").Length))</td>
                    <td>@(new string('*', item.NIS?.Length ?? 0))</td>
                    <td>@(new string('*', item.NumeroUtente?.Length ?? 0))</td>
                    <td>@(new string('*', item.MoradaFiscal?.Length ?? 0))</td>
                    <td>@(new string('*', item.NBI?.Length ?? 0))</td>
                    <td>@(new string('*', item.ValidadeBI.ToString("yyyy-MM-dd").Length))</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@(new string('*', item.Telefone1?.Length ?? 0))</td>
                    <td>@(new string('*', item.Telefone2?.Length ?? 0))</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
