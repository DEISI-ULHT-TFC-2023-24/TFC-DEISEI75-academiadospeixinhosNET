@model academiadospeixinhoscloud.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Detalhes do Produto</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Nome:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-4">Preço:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Preco)</dd>

        <dt class="col-sm-4">Descrição:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
    </dl>
    <div class="text-right mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
