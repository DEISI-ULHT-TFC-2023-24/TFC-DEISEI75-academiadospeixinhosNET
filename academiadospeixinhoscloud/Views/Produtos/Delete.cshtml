@model academiadospeixinhoscloud.Models.Produto

@{
    ViewData["Title"] = "Eliminar Produto";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1>Eliminar Produto</h1>
    <div class="alert alert-danger" role="alert">
        <h3>Tem certeza que deseja eliminar este produto?</h3>
    </div>
    <div>
        <h4>Detalhes do Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nome:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">Preço:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Preco)</dd>

            <dt class="col-sm-4">Descrição:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
